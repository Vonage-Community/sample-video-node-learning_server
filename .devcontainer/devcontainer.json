{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "npm install",
  // "postAttachCommand": [
  //   ["node", "setup.js"],
  //   ["gh", "codespace", "ports", "visibility", "3000:public", "-c", "$CODESPACE_NAME"],
  //   ["npm", "start"]
  // ],
  "postAttachCommand": "gh codespace ports visibility 3000:public -c $CODESPACE_NAME && node setup.js && npm start",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "index.js"
      ]
    }
  },
  "portsAttributes": {
    "3000":{
      "label": "Vonage Node Learning Server",
      "onAutoForward": "openPreview",
      "protocol": "http"
    }
  },
  "forwardPorts": [3000]
}